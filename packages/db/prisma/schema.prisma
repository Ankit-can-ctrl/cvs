datasource db {
  provider="postgresql"
}

generator client {
  provider="prisma-client-js"
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  name String?
  rooms Room[]   //user can have many rooms
  createdAt DateTime @default(now())
}

model Room {
  id String @id @default(uuid())
  slug String @unique
  userId String
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}