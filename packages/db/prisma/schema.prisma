generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(uuid())
  email       String
  password    String
  name        String
  avatar      String
  rooms       Room[]
  chats       Chat[]
}

model Room {
  id            String        @id @default(uuid())
  slug          String        @unique
  createdAt     DateTime      @default(now())
  adminId       String
  admin         User          @relation(fields:[adminId],references:[id])
  //this means the adminId in this model references the id in user table
  chats         Chat[]        
}

model Chat {
  id        Int       @id @default(autoincrement())
  roomId    String
  message   String    
  userId    String
  room      Room      @relation(fields:[roomId],references:[id])
  user      User      @relation(fields:[userId],references:[id])
}
